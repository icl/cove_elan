<% if fields %>
  <%= f.simple_fields_for group do |g| %>
    <div class="span4" id="formlet_<%= group.id.to_s %>">
      <fieldset>
    <legend  ><%= group.name %></legend>
    <% fields.each do |field| %>
      <%= g.input group.id.to_s + "_" + field.id.to_s, 
        :as => field.meta_data_field_type.field_type, 
        :label => field.name, 
        :input_html => { :value => MetaDataHelper.get_field_value(field, @template, group) } %>
    <% end %>
    </fieldset>
    </div>
  <% end %>
<% end %>
