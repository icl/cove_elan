<%= simple_form_for(@meta_data_field) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :meta_data_field_type, :collection => MetaDataFieldType.all.map { |m| [m.field_type, m.id] } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
