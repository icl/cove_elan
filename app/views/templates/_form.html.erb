<%= form_for(@template) do |f| %>
  <% if @template.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@template.errors.count, "error") %> prohibited this template from being saved:</h2>

      <ul>
      <% @template.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br /><br />

  <div class="field">
    <%= f.label @template.name_or_id %>
    <br />
    <%= f.text_field :name, :value => @template.name_or_id %>
  </div>

  <div class="field">
    <%= collection_select(:meta_data_group, :meta_data_group_id, MetaDataGroup.all, :id, :name,
      @selected_meta_data_group.blank? ? {:prompt => "Please Select..."} : {:selected => @selected_meta_data_group.id}) %>
  </div>

  <div class="field">
    <%= render :partial => 'meta_data_fields/fields_form', :locals => { :f => f, :object => @template } %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
