<div class="row">
  <div class="offset3">
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
    <%= f.input :email %>

    <%= f.input :password %>

    <% if devise_mapping.rememberable? -%>
    
      <%= f.input :remember_me, :as => :boolean, :html =>{ :class => 'span2'}%>
    <% end -%>

    <div class="controls"><%= f.button :submit, "Sign in" %></div>
  <% end %>

  <%= render "links" %>
</div>
</div>
