<div class="row" style="margin-top: 80px; margin-bottom:20px; min-height:200px;">
  <div class="offset2 span6" style="padding-top:50px">
    <div class="row ">
      <div class="offset2 span3">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="span12">
    <% @templates.each_with_index do |template, t_index| %>
      <%= render :partial => template, :locals => {:t_index => t_index} %>
    <% end %>

    <script>
      $(function() {
        $('#templateTabs').tab('show');
        $(".collapse").collapse();
      });
    </script>
  </div>
</div>
