<h1>Listing documents</h1>

<table>
  <tr>
    <th>File Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= File.basename(document.eaf.to_s) %></td>
    <td><%= link_to 'Download', download_document_path(document) %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

