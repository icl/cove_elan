<p>
  <b>File Name:</b>
  <%= File.basename(@user_asset.file_name.to_s) %>
</p>






<div class="row">
  <div class="span2">
    <h3>Metadata</h3>
    <ul class="nav nav-list">
      <li class="nav-header">FAR <span class="smallish">Corpus</span></li>

      <% @user_asset.meta_data_groups.each do |group| %>
        <li><a href="#"><i class="icon-list"></i><%= group.name%></a></li>
         <% end %>
        <li class="active"><a href="#"><i class="icon-white icon-list"></i>Phrases</a></li>
        <li><a href="#"><i class="icon-user"></i>Dancers</a></li>
        <li><a href="#"><i class="icon-volume-up"></i>Sound</a></li>
        <li><a href="#"><i class="icon-film"></i>Camera</a></li>
        <li class="nav-header">Marking <span class="smallish">Project</span></li>
        <li><a href="#"><i class="icon-user"></i>Visible?</a></li>
        </ul>
      </div>


      <div id="metadata" class="span4">

        <%= simple_form_for @user_asset,
          :url => url_for(:action => 'update_meta_data', :controller => 'user_assets'),
          :method => 'post' do |f| %>



          <% @user_asset.meta_data_groups.each do |group| %>
            <%=render :partial => 'meta_data_fields/fields_form', :locals => { :f => f, 
              :fields => group.meta_data_fields,
              :group => group } %>
          <% end %>

          <%= f.button :submit %>

        <% end %>


    </div>

  <div id="preview" class="span6">
    <%= display_asset(@user_asset) %>
  </div>

    <div id="tracks" class="span6" style="float:right">
      tracks here
    </div>

  </div>
</div>
